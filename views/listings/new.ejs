<% layout("./layouts/boilerplate") -%>
<body>
    <div class="row">
        <div class="col-8 offset-2">
    <h1>Create new listing</h1>
    <br><br>
   
    <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        
        
        <div>
            <div class="mb-3">
            <label for="title" class="form-label" >Enter title</label>

            <input type="text" name="listing[title]" placeholder="Enter title" class="form-control" required >
            <div class="invalid-feedback">Please Enter valid title</div>
             <div class="valid-feedback">That Seems nice ;)</div>

       </div>
        </div>
        
        <div>
            <div class="mb-3">
             <label for="description" class="form-label">Enter description</label>
             <textarea name="listing[description]" placeholder="Enter description"  class="form-control" required></textarea>
                         <div class="invalid-feedback">Please Enter valid Description</div>
                          <div class="valid-feedback">That Seems nice ;)</div>
       </div>
            </div>
       
        <div>
           <div class="mb-3">
    <label for="image" class="form-label">Upload image</label>
    <input type="file" name="image" class="form-control" required>
    <div class="invalid-feedback">Upload image</div>
    <div class="valid-feedback">That Seems nice ;)</div>
</div>
            </div>
         <div>
            <div class="mb-3">
              <label for="price" class="form-label">Enter Price</label>
            <input type="number" name="listing[price]" placeholder="Enter price"  class="form-control"  required>
                   <div class="invalid-feedback">Please Enter valid Price</div>
                    <div class="valid-feedback">That Seems nice ;)</div>
       </div>
     </div>
      <div class="row">
  <div class="mb-3 col-md-4">
    <label for="location" class="form-label">Enter location</label>
    <input type="text" name="listing[location]" placeholder="Location" class="form-control" required>
                <div class="invalid-feedback">Please Enter valid Location</div>
                 <div class="valid-feedback">That Seems nice ;)</div>
  </div>

  <div class="mb-3 col-md-8">
    <label for="country" class="form-label">Enter Country</label>
    <input type="text" name="listing[country]" placeholder="Country" class="form-control" required>
                <div class="invalid-feedback">Please Enter valid Country</div>
                 <div class="valid-feedback">That Seems nice ;)</div>
  </div>
</div>
<br><br>
        <div class="mb-3">
        <button class="btn btn-dark add">Submit</button>
            </div>
    </form>
    </div>
    </div>
    
</body>
